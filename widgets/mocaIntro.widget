{
  "version": "1.0",
  "name": "MoCA intro",
  "template": "{\"type\":\"Card\",\"size\":\"sm\",\"children\":[{\"type\":\"Col\",\"gap\":2,\"children\":[{\"type\":\"Title\",\"value\":{{ (title) | tojson }},\"size\":\"md\"},{\"type\":\"Text\",\"value\":{{ (description) | tojson }},\"color\":\"secondary\"}]},{\"type\":\"Row\",\"gap\":2,\"padding\":{\"y\":1},\"children\":[{%- set _c -%}{%-for item in meta -%}{%-set idx = loop.index0 -%},{\"type\":\"Badge\",\"key\":{{ (idx) | tojson }},\"label\":{{ (item) | tojson }},\"variant\":\"soft\"}{%-endfor-%}{%- endset -%}{{- (_c[1:] if _c and _c[0] == ',' else _c) -}}]},{\"type\":\"Divider\"},{\"type\":\"Col\",\"gap\":2,\"children\":[{\"type\":\"Text\",\"value\":{{ (disclaimer) | tojson }},\"size\":\"sm\",\"color\":\"tertiary\"},{\"type\":\"Button\",\"label\":{{ (actionLabel) | tojson }},\"style\":\"primary\",\"onClickAction\":{\"type\":{{ (actionType) | tojson }},\"handler\":\"client\"}}]}]}",
