      "description": {
        "type": "string"
      },
      "meta": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "disclaimer": {
        "type": "string"
      },
      "actionLabel": {
        "type": "string"
      },
      "actionType": {
        "type": "string"
      }
    },
    "required": [
      "title",
      "description",
      "meta",
      "disclaimer",
      "actionLabel",
      "actionType"
    ],
    "additionalProperties": false
  },
